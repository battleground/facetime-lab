<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menuVertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/muteVideoV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:src="@drawable/facetime_button" />

        <TextView
            android:id="@+id/muteVideoTextV1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:minEms="4"
            android:paddingLeft="12dp"
            android:text="摄像头"
            android:textColor="@color/color_facetime_menu_text"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/fullScreenV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:src="@drawable/facetime_button" />

        <TextView
            android:id="@+id/fullScreenTextV1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:minEms="4"
            android:paddingLeft="12dp"
            android:text="全屏"
            android:textColor="@color/color_facetime_menu_text"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/hungOffV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:src="@drawable/facetime_button" />

        <TextView
            android:id="@+id/hungOffTextV1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:minEms="4"
            android:paddingLeft="12dp"
            android:text="挂断"
            android:textColor="@color/color_facetime_menu_text"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/muteAudioV1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:focusable="true"
            android:src="@drawable/facetime_button" />

        <TextView
            android:id="@+id/muteAudioTextV1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:minEms="4"
            android:paddingLeft="12dp"
            android:text="静音"
            android:textColor="@color/color_facetime_menu_text"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>
