<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menuHorizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center_horizontal"
    android:animateLayoutChanges="true"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/holdOnV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:padding="12dp"
            android:scaleX="1.1"
            android:scaleY="1.1"
            android:src="@drawable/facetime_button" />

        <TextView
            android:id="@+id/holdOnTextV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minEms="7"
            android:text="接听"
            android:textColor="@color/color_facetime_menu_text"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/hungOffV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:padding="12dp"
            android:scaleX="1.1"
            android:scaleY="1.1"
            android:src="@drawable/facetime_button" />

        <TextView
            android:id="@+id/hungOffTextV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minEms="7"
            android:text="挂断"
            android:textColor="@color/color_facetime_menu_text"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>
